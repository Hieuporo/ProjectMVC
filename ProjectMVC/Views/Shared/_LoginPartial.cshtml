
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item text-white">
            <a asp-controller="Cart" asp-action="Index" class="nav-link px-3"><i class="bi bi-cart text-white"></i></a>
        </li>
        <li class="nav-item">
            <div class="nav-link px-3">Hello @UserManager.GetUserName(User)</div>
        </li>
        <li class="nav-item">
            <a class="nav-link px-3" asp-controller="Auth" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link px-3" asp-controller="Auth" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link px-3" asp-controller="Auth" asp-action="Register">Register</a>
        </li>
    }
</ul>
